<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_name_orig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_max="326dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/film_name_ru"
            style="@style/poster_text"
            app:layout_constraintVertical_bias="1.0"
            tools:text="@tools:sample/lorem/random" app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/film_name_ru"
            app:layout_constraintTop_toBottomOf="@id/film_name_orig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/poster_text.3"
            android:layout_margin="4dp"
            tools:text="8.2"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_name_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/film_name_orig"
            app:layout_constraintStart_toEndOf="@id/film_ratio"
            style="@style/poster_text.3"
            android:layout_margin="4dp"
            tools:text="@tools:sample/lorem"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_max="326dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/film_ratio"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/poster_text.3"
            tools:text="genre, genre genre, genre genre, genre genre, genre genre, genre genre, genre"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_max="326dp"
            app:layout_constraintTop_toBottomOf="@id/film_genre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/poster_text.3"
            tools:text="usa"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_tools"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@color/gray_for_background_alfa_0"
                android:src="@drawable/ic_like"/>
        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@color/gray_for_background_alfa_0"
                android:src="@drawable/ic_mark"/>
        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_viewed"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@color/gray_for_background_alfa_0"
                android:src="@drawable/ic_unviewed"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_mark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@color/gray_for_background_alfa_0"
                android:src="@drawable/ic_share"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@color/gray_for_background_alfa_0"
                android:src="@drawable/ic_tools"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>