<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleMarginBottom="@dimen/X2_fab_margin">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/poster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:src="@drawable/outline"
                        android:foreground="@drawable/background_film"
                        tools:src="@tools:sample/avatars"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignBottom="@id/poster">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/film_name_orig"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/poster_text"
                            android:clickable="true"
                            android:focusable="true"
                            tools:text="@tools:sample/lorem/random"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/film_ratio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/poster_text.3"
                            tools:text="8.2"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fab_margin"
                            android:layout_marginEnd="@dimen/fab_margin">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/film_genre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:gravity="center"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/serial_seasons"
                                app:layout_constraintBottom_toBottomOf="parent"
                                style="@style/poster_text.3"
                                tools:text="genre, genre"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/serial_seasons"
                                android:layout_width="@dimen/_56dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:maxLines="1"
                                android:gravity="start"
                                app:layout_constraintStart_toEndOf="@id/film_genre"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                style="@style/poster_text.3"
                                tools:text="season"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/film_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/poster_text.3"
                            tools:text="usa"/>
                    <LinearLayout
                            android:id="@+id/icons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ic_like"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="@dimen/ic_margin"
                                android:background="@drawable/ic_like"/>
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ic_mark"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="@dimen/ic_margin"
                                android:background="@drawable/ic_mark"/>
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ic_viewed"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="@dimen/ic_margin"
                                android:background="@drawable/ic_unviewed"/>

                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ic_share"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="@dimen/ic_margin"
                                android:background="@color/gray_for_background_alfa_0"
                                android:src="@drawable/ic_share"/>

                        <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ic_tools"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_margin="@dimen/ic_margin"
                                android:background="@color/gray_for_background_alfa_0"
                                android:src="@drawable/ic_tools"/>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    app:layout_collapseMode="parallax">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_back"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="@string/ic_arrow_left"
                            style="@style/title.3"
                            android:gravity="center"/>


                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description_short"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:maxLength="250"
                    style="@style/title.3_black"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@tools:sample/lorem/random"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    style="@style/title.3"
                    android:ellipsize="end"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@+id/description_short"
                    tools:text="@tools:sample/lorem/random"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_is_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:text="@string/seasons"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title.3_black"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_seasons_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seasons"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    app:layout_constraintTop_toBottomOf="@+id/title_is_serial"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title.3"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/serial_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@+id/title_is_serial"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/title.3_button"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_of_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/X2_fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:text="@string/actors"
                    app:layout_constraintTop_toBottomOf="@+id/title_is_serial"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title.3_black"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/actor_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    app:layout_constraintTop_toBottomOf="@+id/title_of_actor"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_detail_actor_recycler_element"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actor_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="@+id/title_of_actor"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/title.3_button"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_of_not_actor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/X2_fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:text="@string/not_actors"
                    app:layout_constraintTop_toBottomOf="@+id/actor_recycler"
                    style="@style/title.3_black"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/not_actor_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    app:layout_constraintTop_toBottomOf="@+id/title_of_not_actor"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_detail_actor_recycler_element"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/not_actor_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:text="@string/_0"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="@+id/title_of_not_actor"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/title.3_button"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gallery"
                    android:layout_marginTop="@dimen/X2_fab_margin"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    app:layout_constraintTop_toBottomOf="@+id/not_actor_recycler"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/title.3_black"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/galleryRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_constraintTop_toBottomOf="@+id/title_gallery"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/gallery_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="@+id/title_gallery"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/title.3_button"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/similar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/similars"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_constraintTop_toBottomOf="@+id/galleryRecycler"
                    style="@style/title.3_black"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similarRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="@dimen/fab_margin"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/similar"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/similar_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_margin="@dimen/X2_fab_margin"
                    android:progressTint="?attr/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/similar"/>

            <com.google.android.material.internal.BaselineLayout
                    android:id="@+id/barrier"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/similarRecycler"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>