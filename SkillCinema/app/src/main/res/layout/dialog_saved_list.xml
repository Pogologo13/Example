<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_dissmiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/baseline_close_24" android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_8" android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_margin="@dimen/X2_fab_margin"
            app:cardCornerRadius="@dimen/margin_8">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/poster_preview"
                android:layout_width="111dp"
                android:layout_height="156dp"
                android:background="@drawable/outline"
                android:src="@drawable/vector_s"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"/>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/die"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:elevation="2dp"
            android:background="@drawable/outline"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/card"
            android:layout_alignTop="@+id/card"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/die_title"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:elevation="2dp"
            android:layout_alignTop="@id/die"
            android:layout_alignStart="@+id/die"
            android:layout_alignEnd="@id/die"
            android:layout_alignBottom="@+id/die"
            android:gravity="center"
            style="@style/title.4"
            tools:text="8.1"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card"
            android:layout_alignTop="@+id/card"
            style="@style/title.3_black"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text=" Зеленая Миля Зеленая Миля Зеленая"
            android:layout_marginTop="@dimen/X2_fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/film_description"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_title"
            android:layout_alignStart="@+id/film_title"
            android:layout_marginBottom="@dimen/margin_8"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/title.3"
            tools:text="Драмма"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_baseline"
            android:layout_alignStart="@+id/card"
            android:src="@drawable/icons__5_"/>

    <com.google.android.material.internal.BaselineLayout
            android:id="@+id/first_baseline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_below="@id/card"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:layout_alignTop="@+id/image"
            android:text="@string/add_collection"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignParentEnd="true"
            style="@style/title.3_black"/>

    <com.google.android.material.internal.BaselineLayout
            android:id="@+id/second_baseline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_below="@id/image"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_baseline"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_dialog_recycler_add_collection"
            android:layout_margin="@dimen/X2_fab_margin"/>
</RelativeLayout>