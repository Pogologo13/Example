<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="title.2" >
        <item name="android:textSize">24sp</item>
    </style>
    <style name="title.3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="title.3_black">
        <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/black</item>
    </style>

    <style name="title.3_button">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/purple_500</item>
    </style>
    <style name="title.4">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="poster_text" >
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/poster_text_color</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="poster_text.2" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/poster_text_color</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="poster_text.3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/poster_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="chip_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/chip_text_color_selector</item>
    </style>

</resources>